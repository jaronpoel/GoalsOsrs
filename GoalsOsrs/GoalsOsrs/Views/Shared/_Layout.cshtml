@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoalsOsrs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-brown box-shadow mb-3">
            <div class="container" style="z-index: 2;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GoalsOsrs</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        @if (!string.IsNullOrEmpty(Context.Session.GetString("name")))
                        {
                            <li class="nav-item nav-floatleft">
                                <a class="nav-link text-white" asp-area="" asp-controller="Goal" asp-action="Goal">Your Goals</a>
                            </li>

                            <li class="nav-item">
                                <div class="nav-floatright dropdown" style="margin-top: 0px;">
                                    <a class="dropdown-toggle nav-link text-white" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Context.Session.GetString("name")
                                    </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="User" asp-action="Info" asp-route-id="@Context.Session.GetInt32("userid")">Account</a>
                                        <a class="dropdown-item" asp-controller="User" asp-action="SignOut">Sign out</a>
                                    </div>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item nav-floatright">
                                <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="SignIn">Sign In</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
